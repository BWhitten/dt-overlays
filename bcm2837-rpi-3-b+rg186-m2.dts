/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2837";

	#address-cells = <1>;
	#size-cells = <0>;

	fragment@0 {
		reg = <0>;

		target = <&spi>;

		__overlay__ {
			status = "okay";

			#address-cells = <1>;
			#size-cells = <0>;

			spidev@0 {
				reg = <0>;
				status = "disabled";
			};

			spidev@1 {
				reg = <1>;
				status = "disabled";
			};

			concentrtor0: lora@0 {
				compatible = "semtech,sx1301";
				reg = <0>;
				spi-max-frequency = <8000000>;
				reset-gpios = <&gpio 17 0>;

				power-lut =   [ FD 00 00 03 08
						00 00 00 03 09
						03 00 00 03 0C
						04 00 00 03 0D
						06 00 01 03 08
						09 00 01 03 09
						0A 00 01 03 0A
						0C 00 01 03 0B
						0D 00 01 03 0C
						0E 00 01 03 0D
						10 00 01 03 0F
						13 00 02 03 0A
						15 00 02 03 0B
						16 00 02 03 0C
						18 00 02 03 0D
						19 00 02 03 0E ];

				radio-spi {
					#address-cells = <1>;
					#size-cells = <0>;

					radio0: radio@0 {
						compatible = "semtech,sx1257";
						spi-max-frequency = <8000000>;
						reg = <0>;
					};

					radio1: radio@1 {
						compatible = "semtech,sx1257";
						spi-max-frequency = <8000000>;
						reg = <1>;
					};
				};
			};
		};
	};
};
